alias q="exit"

alias g="git"
alias gs="g s"
alias clone="g clone"
alias init="g init"
alias shallow="clone --depth 1"

function github-clone {
  TO=$HOME/repos/$1/$2
  clone git@github.com:$1/$2.git $TO
  pushd $TO
}

alias v="vim"
alias vf="v \$(f)"
alias v.="vim ."

alias k="kubectl"
alias mk="minikube"
alias d="docker"
alias h="\history -i 0 | f"
alias m="make"
alias y="yarn"
alias ym="y && m"

alias f="fzf"
alias tmux="TERM=screen-256color tmux -2"
alias tm="tmux"
alias tma="tmux attach"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="pushd ~"
alias repos="pushd ~/repos"

alias l="ls -lh --color"
alias la="ls -lha --color"

for level in {1..9}; do
  tree="tree -C -L ${level}";
  t=$(repeat ${level} echo -n "t");
  eval "alias ${t}='${tree}'";
  eval "alias t${level}='${tree}'";
done

alias dotfiles="pushd ~/repos/ostera/dotfiles"
alias gitconf="vim ~/.gitconfig"
alias reload="source ~/.zshrc"
alias tmuxrc="vim ~/.tmux.conf"
alias vimrc="vim ~/.vimrc"
alias vundlerc="vim ~/.vim/vundle.vim"
alias zshrc="vim ~/.zshrc ; reload"

alias pipit="pip install -r requirements.txt"
alias py="python"
alias srv="python -m SimpleHTTPServer"

alias swank="sbcl --load ~/.vim/slime/start-swank.lisp"

alias rb="ruby"
alias rk="racket"

function rbi {
  eval "$(rbenv init -)"
  rbenv rehash
}

for release in {16..19}; do
  p="${HOME}/.kerl/erlang/r${release}";
  eval "alias r${release}='. ${p}/activate'";
  eval "export ERL${release}=${p}";
done
